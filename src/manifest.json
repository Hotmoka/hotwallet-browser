{
  "name": "Hotwallet",
  "description": "Wallet for Hotmoka blockchain",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "48": "icons/wallet_48x48.png",
    "128": "icons/wallet_128x128.png"
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/wallet_48x48.png",
      "128": "icons/wallet_128x128.png"
    },
    "default_title": "Hotwallet",
    "default_popup": "app/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}
