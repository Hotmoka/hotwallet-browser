{
  "name": "Hotwallet",
  "description": "Wallet for the Hotmoka blockchain",
  "version": "1.0.1",
  "manifest_version": 2,
  "icons": {
    "48": "icons/hotmoka_logo.png"
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/hotmoka_logo.png"
    },
    "default_title": "Hotwallet",
    "default_popup": "app/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": ["globals.js"],
  "permissions": [
    "storage"
  ]
}
